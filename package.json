{
  "name": "automationProtractor",
  "version": "0.0.1",
  "author": "sdemianets",
  "homepage": "https://github.com/stasyasin/automationProtractor",
  "private": true,
  "scripts": {
    "lint": "tslint -c tslint.json '**/**/*.ts'",
    "sh-build": "cd scripts && build.sh",
    "sh-run": "cd scripts && run.sh",
    "sh-debug": "cd scripts && debug.sh",
    "sh-report": "cd scripts && report.sh",
    "sh-e2e": "cd scripts && build.sh && run.sh && report.sh",
    "webdriver:start": "webdriver-manager start --seleniumPort 4444",
    "webdriver:update": "webdriver-manager update",
    "prot:run": "protractor ./qaprotractor.conf.js",
    "sleep": "sleep 10",
    "testrun": "concurrently \"npm run webdriver:start\" \"npm run sleep && npm run prot:run\" --kill-others",
    "e2e": "npm run sh-build && npm run webdriver:update && npm run testrun && npm run sh-report"
  },
  "devDependencies": {
    "protractor": "^5.2.2",
    "typescript": "~2.6.2",
    "xmlhttprequest": "1.8.0",
    "tslint": "^5.6.0",
    "@types/jasmine": "^2.8.8",
    "@types/node": "^8.10.20",
    "@types/selenium-webdriver": "2.53.36",
    "jasmine": "^2.8.0",
    "eslint": "^0.22.1",
    "protractor-html-screenshot-reporter": "0.0.21",
    "protractor-http-mock": "~0.9.1",
    "protractor-jasmine2-html-reporter": "0.0.7",
    "require-dir": "0.3.2",
    "run-sequence": "^1.2.2",
    "fs-extra": "^4.0.3",
    "xhr": "2.4.1",
    "moment": "^2.22.2",
    "concurrently": "^4.0.1",
    "prettier": "^1.13.7",
    "gulp": "^4.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-protractor": "^4.1.1",
    "gulp-shell": "^0.6.5"
  },
  "description": "Automation Protractor framework",
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "bracketSpacing": true
  }
}
